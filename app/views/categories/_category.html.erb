<div class="accordion-item">
  <h2 class="accordion-header">
    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse<%= dom_id category %>" aria-expanded="false" aria-controls="flush-collapse<%= dom_id category %>", style="background-color: white;">
      <a href="#" class="list-group-item list-group-item-action active" aria-current="true">
        <div class="d-flex w-100 justify-content-between">
          <h5 class="mb-1"><%= category.name %></h5>
        </div>
        <hr>
        <span class="badge bg-danger rounded-pill">
          Incompleted tasks: <%= count_incomplete_tasks_in_category(category) %>
        </span>
        <span class="badge bg-secondary rounded-pill">
          Completed tasks: <%= count_completed_tasks_in_category(category) %>
        </span>
      </a>
    </button>
  </h2>
  <div id="flush-collapse<%= dom_id category %>" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
    <div class="accordion-body">
      <div class="card">
        <div class="card-body">
          <%= category.description %>
        </div>
      </div>
    </div>
    <div class="btn-group" role="group" aria-label="Basic example", style="padding-bottom: 18px">
    <%= button_to "Open tasks", category_tasks_path(category), method: :get, class: 'btn btn-outline-success' %>&nbsp;&nbsp;
      <%= button_to "Edit this category", edit_category_path(category), method: :get, class: 'btn btn-outline-primary' %>&nbsp;&nbsp;
      <%= button_to "Destroy this category", category, method: :delete, class: 'btn btn-outline-danger' %>
    </div>
  </div>
</div>