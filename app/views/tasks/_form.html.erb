
<%= simple_form_for(@task) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description, input_html: {rows: 15} %>
    <%= f.input :due_date %>
    
    <div class="form-group">
      <%= f.label :priority, class: 'control-label' %>
      <%= f.select :priority, Task.priorities.keys.map { |p| [p.humanize, p] }, { prompt: 'Select Priority' }, class: 'form-control' %>
    </div>

    <br>

    <div class="card">
      <div class="card-body">
        <%= f.check_box :completion %>
        <%= f.label :completion, "Completado" %>
      </div>
    </div>

    <br>
          
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
    <%= link_to "Back to tasks", tasks_path, class: 'btn btn-outline-primary' %>
  </div>
<% end %>